<UserControl x:Class="EnglishTrainer.UserControls.ShotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishTrainer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <Image Name="ShotImage" Width="60" Height="60" RenderTransformOrigin="0.5, 0.5" Source="\Images\shot.png">
            <Image.RenderTransform>
                <RotateTransform Angle="{Binding Shot.Angle}"></RotateTransform>
            </Image.RenderTransform>
        </Image>
    </StackPanel>
</UserControl>
