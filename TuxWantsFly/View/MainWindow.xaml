<Window x:Class="TuxWantsFly.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuxWantsFly"
        mc:Ignorable="d" DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Width="1024" Height="768">
    <Grid>
        <Canvas ClipToBounds="True">
            <Button Content="Start" Width="100" Canvas.Top="500" Canvas.Left="0" Command="{Binding StartGameCommand}" />
        </Canvas>
    </Grid>
</Window>
